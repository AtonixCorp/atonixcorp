# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Environment
RACK_ENV=development
PORT=3000
BIND=0.0.0.0

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/atonixcorp_ruby
DATABASE_SSL=false
DB_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5
REDIS_RECONNECT_ATTEMPTS=3

# Security
SECRET_KEY_BASE=your-secret-key-base-here
SIDEKIQ_USERNAME=admin
SIDEKIQ_PASSWORD=password

# Logging
LOG_LEVEL=info

# Puma Configuration
PUMA_WORKERS=2
PUMA_MIN_THREADS=1
PUMA_MAX_THREADS=16
PUMA_WORKER_TIMEOUT=3600
PUMA_PRELOAD=true
PUMA_DAEMONIZE=false

# Sidekiq Configuration
SIDEKIQ_CONCURRENCY=25
SIDEKIQ_TIMEOUT=25
ENABLE_SIDEKIQ_SCHEDULER=true

# External Services
# Add configuration for external APIs, webhooks, etc.

# Development
ENABLE_DEVELOPMENT_TOOLS=true