# ============================================================
#  AtonixCorp – Environment Configuration
#
#  Copy to .env and fill in values before running docker compose.
#  Never commit .env — it is in .gitignore.
#
#  Usage:
#    cp .env.example .env
#    docker compose --profile dev up -d
# ============================================================

# ── Database ──────────────────────────────────────────────────────────────────
POSTGRES_DB=atonixcorp
POSTGRES_USER=atonixcorp_user
POSTGRES_PASSWORD=changeme

# ── Redis ─────────────────────────────────────────────────────────────────────
# Used for caching and Django Channels layer (production)
REDIS_URL=redis://redis:6379/0

# ── Django Backend ────────────────────────────────────────────────────────────
# Generate a real secret key for production:
#   python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION

# "True" for development, "False" for production
DEBUG=False

# Comma-separated list of allowed hostnames (no spaces)
ALLOWED_HOSTS=atonixcorp.com,api.atonixcorp.com,www.atonixcorp.com,localhost,127.0.0.1

# Full DATABASE_URL used by the backend container in prod
DATABASE_URL=postgresql://atonixcorp_user:changeme@db:5432/atonixcorp

# CORS — comma-separated origins allowed to call the API
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://atonixcorp.com,https://www.atonixcorp.com

# ── Message Broker ────────────────────────────────────────────────────────────
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=changeme
RABBITMQ_URL=amqp://admin:changeme@rabbitmq:5672/

# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_ENABLED=true

# ── Monitoring ────────────────────────────────────────────────────────────────
PROMETHEUS_PUSHGATEWAY_URL=http://pushgateway:9091
GRAFANA_PASSWORD=admin123

# ── OpenStack (platform integration) ─────────────────────────────────────────
OS_CLOUD=atonixcorp
OS_AUTH_URL=http://your-openstack-host:5000/v3
OS_USERNAME=atonixcorp-svc
OS_PASSWORD=changeme
OS_PROJECT_NAME=atonixcorp
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default

# ── Frontend (used by frontend container) ────────────────────────────────────
# Points the React app at the backend API
REACT_APP_API_URL=https://api.atonixcorp.com/api
REACT_APP_WS_URL=wss://api.atonixcorp.com/ws
REACT_APP_ENVIRONMENT=production
