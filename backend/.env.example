# AtonixCorp Backend – Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ── Django ────────────────────────────────────────────────────────────────────
SECRET_KEY=CHANGE_ME_generate_with_python_secrets_token_hex_50
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ── Database (leave blank to use SQLite in dev) ──────────────────────────────
# DATABASE_URL=postgresql://user:password@localhost:5432/atonixcorp

# ── OpenStack Credentials ─────────────────────────────────────────────────────
# Option A – environment variables (takes precedence over clouds.yaml)
OS_AUTH_URL=http://controller:5000/v3
OS_USERNAME=admin
OS_PASSWORD=CHANGE_ME
OS_PROJECT_NAME=admin
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default
OS_REGION_NAME=RegionOne

# Option B – clouds.yaml cloud name (used when OS_AUTH_URL is not set)
# Place your clouds.yaml at ~/.config/openstack/clouds.yaml or ./clouds.yaml
OS_CLOUD=atonix

# ── Docker Registry ───────────────────────────────────────────────────────────
# DOCKER_REGISTRY=registry.atonixcorp.com
# DOCKER_USERNAME=your-username
# DOCKER_PASSWORD=CHANGE_ME
